{
  "name": "shalom",
  "version": "1.0.0",
  "description": "A flexbox flex",
  "main": "index.js",
  "scripts": {
    "watch:sass": "node-sass sass/main.scss css/style.css -w",
    "devserver": "live-server",
    "start": "npm-run-all --parallel devserver watch:sass",

    "compile:sass": "node-sass sass/main.scss css/comp.css",
    "compr:css": "node-sass css/comp.css css/style.min.css --output-style compressed",
    "build:css": "npm-run-all compile:sass compr:css"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Michie1001/shalom.git"
  },
  "author": "michelle",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/Michie1001/shalom/issues"
  },
  "homepage": "https://github.com/Michie1001/shalom#readme",
  "devDependencies": {
    "autoprefixer": "^9.8.0",
    "concat": "^1.0.3",
    "node-sass": "^4.14.1",
    "npm-run-all": "^4.1.5",
    "postcss-cli": "^7.1.1"
  }
}
